  <h1>Add Classification</h1>

  <% if (notice) { %>
    <p class="flash-fail"><%= notice %></p>
  <% } %>

  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-classification" method="post" class="needs-validation" novalidate>
    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      name="classification_name"
      id="classification_name"
      required
      pattern="^[A-Za-z]+$"
      value="<%= classification_name %>"
      placeholder="e.g., SportsCars"
      aria-describedby="nameHelp">
    <small id="nameHelp">Letters only â€” no numbers, spaces, or special characters.</small>

    <button type="submit">Save Classification</button>
  </form>

<script src="/js/form-validation.js" defer></script>