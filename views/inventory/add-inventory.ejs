<%- include('../partials/header', { title }) %>

<main class="form-page">
  <h1>Add Vehicle</h1>

  <% if (notice) { %>
    <p class="flash-fail"><%= notice %></p>
  <% } %>

  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="post" class="needs-validation" novalidate>
    <label for="classificationList">Classification</label>
    <%- classificationList %>

    <label for="invMake">Make</label>
    <input id="invMake" name="inv_make" type="text" required placeholder="e.g., Toyota" value="<%= inv_make %>">

    <label for="invModel">Model</label>
    <input id="invModel" name="inv_model" type="text" required placeholder="e.g., Camry" value="<%= inv_model %>">

    <label for="invYear">Year</label>
    <input id="invYear" name="inv_year" type="number" required min="1886" max="3000" placeholder="e.g., 2023" value="<%= inv_year %>">

    <label for="invDescription">Description</label>
    <textarea id="invDescription" name="inv_description" required rows="3" placeholder="Describe the vehicle"><%= inv_description %></textarea>

    <label for="invImage">Image Path</label>
    <input id="invImage" name="inv_image" type="text" required placeholder="/images/vehicles/no-image.png" value="<%= inv_image %>">

    <label for="invThumbnail">Thumbnail Path</label>
    <input id="invThumbnail" name="inv_thumbnail" type="text" required placeholder="/images/vehicles/no-image-tn.png" value="<%= inv_thumbnail %>">

    <label for="invPrice">Price</label>
    <input id="invPrice" name="inv_price" type="number" required min="0" step="0.01" placeholder="e.g., 30000" value="<%= inv_price %>">

    <label for="invMiles">Miles</label>
    <input id="invMiles" name="inv_miles" type="number" required min="0" placeholder="e.g., 15000" value="<%= inv_miles %>">

    <label for="invColor">Color</label>
    <input id="invColor" name="inv_color" type="text" required placeholder="e.g., Blue" value="<%= inv_color %>">

    <button type="submit">Save Vehicle</button>
  </form>
</main>

<script src="/js/form-validation.js" defer></script>
<%- include('../partials/footer') %>
