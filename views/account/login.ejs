<h1>Login</h1>

<% if (notice) { %>
  <p class="flash-fail"><%= notice %></p>
<% } %>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
  </ul>
<% } %>

<form action="/account/login" method="post" class="needs-validation" novalidate>
  <label for="account_email">Email</label>
  <input
    id="account_email"
    name="account_email"
    type="email"
    required
    value="<%= account_email %>"
  >

  <label for="account_password">Password</label>
  <input
    id="account_password"
    name="account_password"
    type="password"
    required
  >

  <button type="submit">Log In</button>
</form>

<p>
  Need an account?
  <a href="/account/register">Register here</a>.
</p>

<script src="/js/form-validation.js" defer></script>
