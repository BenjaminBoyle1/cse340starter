<h1><%= title %></h1>

<% if (notice) { %>
  <p class="flash-fail"><%= notice %></p>
<% } %>

<% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
  </ul>
<% } %>

<!-- ============ Account Update Form ============ -->
<section>
  <h2>Account Update</h2>

  <form action="/account/update" method="post" class="needs-validation" novalidate>
    <label for="account_firstname">First Name</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
      value="<%= typeof account_firstname !== 'undefined' ? account_firstname : accountData.account_firstname %>"
    >

    <label for="account_lastname">Last Name</label>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      required
      value="<%= typeof account_lastname !== 'undefined' ? account_lastname : accountData.account_lastname %>"
    >

    <label for="account_email">Email</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : accountData.account_email %>"
    >

    <!-- Hidden account_id -->
    <input
      type="hidden"
      name="account_id"
      value="<%= accountData.account_id %>"
    >

    <button type="submit">Update Account</button>
  </form>
</section>

<!-- ============ Change Password Form ============ -->
<section>
  <h2>Change Password</h2>
  <p>
    Enter a new password below to change your current password.
    It must meet the same requirements as your registration password:
    at least 12 characters, with upper and lower case letters,
    a number, and a special character.
  </p>

  <form action="/account/update-password" method="post" class="needs-validation" novalidate>
    <label for="account_password">New Password</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
    >

    <!-- Hidden account_id -->
    <input
      type="hidden"
      name="account_id"
      value="<%= accountData.account_id %>"
    >

    <button type="submit">Change Password</button>
  </form>
</section>

<script src="/js/form-validation.js" defer></script>
