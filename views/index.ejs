<!-- A heading outside the hero image -->
<section class="hero-header">
  <h2>Welcome to CSE Motors!</h2>
</section>

<!-- Hero with background image -->
<section class="hero">
  <div class="hero-text">
    <h3 class="model-name">DMC Delorean</h3>
    <ul>
      <li>3 Cup holders</li>
      <li>Superman doors</li>
      <li>Fuzzy dice!</li>
    </ul>
    <a href="#" class="cta-button">Own Today</a>
